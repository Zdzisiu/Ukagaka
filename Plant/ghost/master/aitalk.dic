OnPlantChange
{
	for _i=2;_i<6;_i++
	{
		_temprand = plantid[_i]
		potinterval[_i] = plantinnum[_i]
		plantnamepot[_i] = plantname[_i]
		plantgtime[_i] = plantgrowthtimeinterval[_i]
		potwaterint[_i] = plantwaterint[_i]
	}
	--
	_temprand = plantid[0]
	potinterval[0] = plantinnum[0]
	plantnamepot[0] = plantname[0]
	plantgtime[0] = plantgrowthtimeinterval[0]
	potwaterint[0] = plantwaterint[0]
	--
	if m201zplantcare == 1
	{
		_temprand = plantid[7]
		potinterval[7] = plantinnum[7]
		plantnamepot[7] = plantname[7]
		plantgtime[7] = plantgrowthtimeinterval[7]
		potwaterint[7] = plantwaterint[7]
	}
}

/*
OnSurfaceRestore
-----
Reference0: The current surface of the body.
Reference1: Current surface on the other side. 
*/

OnSurfaceRestore
{
	OnPlantRestore
}

OnPlantRestore
{
	_page = ""
	--
	for _i=1;_i<6;_i++
	{
		if "%(_i)" _in_ activepots
		{
			_tempinteval = TOINT(plantid[_i])
			--
			_page += "\p[" + _i + "]\s[0]"
			--
			if seedinpot[_i] == 3
			{
				_page += "\i[" + potinterval[_tempinteval] + "]"
			}
			elseif seedinpot[_i] == 1
			{
				_page += "\i[100]"
			}
			elseif seedinpot[_i] == 2
			{
				_page += "\i[101]"
			}
			--
			if waterreminder[_i] == 1
			{
				_page += "\i[500]"  //water marker
			}
		}
	}
	--
	_page
	--
	"\0\s[0]"
	--
	if seedinpot[0] == 3
	{
		"\i[%(potinterval[0])]"
	}
	elseif seedinpot[0] == 1
	{
		"\i[100]"
	}
	elseif seedinpot[0] == 2
	{
		"\i[101]"
	}
	--
	if waterreminder[0] == 1
	{
		"\i[500]"  //water marker
	}
	--
	if m201zplantcare == 1
	{
		"\p[7]\s[7]"
		--
		if seedinpot[7] == 3
		{
			"\i[%(potinterval[7])]"
		}
		elseif seedinpot[7] == 1
		{
			"\i[100]"
		}
		elseif seedinpot[7] == 2
		{
			"\i[101]"
		}
		--
		if waterreminder[7] == 1
		{
			"\i[500]"  //water marker
		}
	}
}

/*
OnKeyPress
-----
Reference0: The key entered. (Letter written on key top)
Reference1: The key entered. (Win32 virtual key code)
Reference2: *SSP only Counts the key pressed.
Reference3: *SSP only Character window ID where the key event came.
Reference4: *SSP only Modifier keys are listed separated by commas. Example: "ctrl,alt" 
*/

OnKeyPress
{
	if reference0 == "t"
	{
		OnAiTalk
	}
	elseif reference0 == "r"
	{
		OnLastTalk
	}
	elseif reference0 == "f1"
	{
		"\![open,readme]"
	}
}

