AiTalk
{
	if RAND(100) < communicateratio
	{
		StartCommunicate
	}
	else
	{
		if mikireflag == 0
		{
			if CHAIN.IDName == "" {
				lastTalk = RandomTalk
			}
			else {
				lastTalk = ChainTalk
			}
			lastTalk
		}
		else
		{ 
			MikireTalk
		}
	}
} 

RandomTalk : nonoverlap
{
	if silence != "ON"
	{
		"\![sound,play,s/%(meows),--volume=%(volume)]" 
		"\![sound,play,s/sneeze.wav,--volume=%(volume)]"
		"\![sound,play,s/long purr.wav,--volume=%(volume)]"
	}
	else
	{
		"Meow" 
	}
}

