	}
	--
	if "Azura" _in_ "%(ghostexlist)"
	{
		_pula += "Azura,"
	}
	--
	if "RYS-0825" _in_ "%(ghostexlist)"
	{
		_pula += "RYS-0825,"
	}
	--
	if "Hydrate" _in_ "%(ghostexlist)"
	{
		_pula += "Hydrate,"
	}
