OnGrowthCheck
{
	for _i=2;_i<=pots;_i++
	{
		_page = ""
		_randnum = RAND(500)
		--
		_tempinteval = TOINT(plantid[_i])
		--
		_page += "\p[" +_i + "]"
		--
		if planttime[_i] == ((plantgtime[_i]*60)/2) && seedinpot[_i] == 1
		{
			seedinpot[_i] = 2
			--
			_page += "\i[101]"
		}
		--
		if seedinpot[_i] == 1 || seedinpot[_i] == 2
		{
			if mode != "Easy"
			{
				if _randnum == 5
				{
					_page += "\i[102]"
					--
					seedinpot[_i] = 3
					planttime[_i] = 0
					plantid[_i] = 0
					--
					_tempinteval = TOINT(plantid[_i])
					--
					if plantid[_i] !_in_ plantdisovered
					{
						plantsdiscoverednum++
						--
						plantdisovered += plantid[_i] + " "
					}
				}
			}
			--
			if planttime[_i] == (plantgtime[_i]*60)  && seedinpot[_i] != 3 && seedinpot[_i] != 0
			{
				seedinpot[_i] = 3
				planttime[_i] = 0
				--
				_page += "\i[%(plantinnum[_tempinteval])] You grew %(plantname[_tempinteval])"
				--
				plantgrew[_tempinteval]++
				--
				if plantid[_i] !_in_ plantdisovered
				{
					plantsdiscoverednum++
					--
					plantdisovered += plantid[_i] + " "
				}
			}
		}
		--
		_page
	}
	--
	if seedinpot[0] == 1 || seedinpot[0] == 2
	{
		"\0"
		--
		_randnum = RAND(500)
		_tempinteval = TOINT(plantid[0])
		--
		if planttime[0] == ((plantgtime[0]*60)/2)
		{
			seedinpot[0] = 2
			--
			"\i[101]"
		}
		--
		if seedinpot[0] == 1 || seedinpot[0] == 2
		{
			if mode != "Easy"
			{
				if _randnum == 5
				{
					"\i[102]"
					--
					seedinpot[0] = 3
					plantid[0] = 0
					--
					_tempinteval = TOINT(plantid[0])
					--
					if plantid[0] !_in_ plantdisovered
					{
						plantsdiscoverednum++
						--
						plantdisovered += plantid[0] + " "
					}
					--
					"You grew %(plantname[_tempinteval])"
				}
			}
			--
			if planttime[0] == (plantgtime[0]*60)  && seedinpot[0] != 3 && seedinpot[0] != 0
			{
				seedinpot[0] = 3
				planttime[0] = 0
				--
				"\i[%(plantinnum[_tempinteval])] You grew %(plantname[_tempinteval])"
				--
				if plantid[0] !_in_ plantdisovered
				{
					plantsdiscoverednum++
					plantdisovered += plantid[0] + " "
				}
			}
		}
	}
	--
	if m201zplantcare == 1 &&  seedinpot[7] == 1 || seedinpot[7] == 2
	{
		"\p[7]"
		--
		_tempinteval = TOINT(plantid[0])
		_randnum = RAND(500)
		--
		if planttime[7] >= ((plantgtime[7]*60)/2) && seedinpot[7] == 1
		{
			seedinpot[7] = 2
			--
			"\i[101]"
		}
		--
		if seedinpot[7] == 1 || seedinpot[7] == 2
		{
			if mode != "Easy"
			{
				if _randnum == 5
				{
					"\i[102]"
					--
					seedinpot[7] = 3
					planttime[7] = 0
					plantid[7] = 0
					_tempinteval = TOINT(plantid[0])
					--
					if plantid[7] !_in_ plantdisovered
					{
						plantsdiscoverednum++
						plantdisovered += plantid[7] + " "
					}
				}
			}
			--
			if planttime[7] == (plantgtime[7]*60)  && seedinpot[7] != 3 && seedinpot[7] != 0
			{
				seedinpot[7] = 3
				planttime[7] = 0
				--
				"\i[%(plantinnum[_tempinteval])] You grew %(plantname[_tempinteval])"
				--
				if plantid[7] !_in_ plantdisovered
				{
					plantsdiscoverednum++
					plantdisovered[plantsdiscoverednum] = plantid[7]
				}
				res_reference0 = "MiniDev"
				--
				"\e PlantGrewMz0,%(plantname[_tempinteval]),%(plantid[7])"
			}
			
		}
	}
	--
	OnPlantChange
}

