OnKeyPress
{
	if reference0 == "t"
	{
	OnAiTalk
	}
	elseif reference0 == "r"
	{
	OnLastTalk
	}
	elseif reference0 == "right"
	{
		if volume < 100
		{
			volume += 5
		}
		--
		if volume > 100
		{
			volume = 100
		}
		--
		if purrmode == "ON"
		{
			"\![sound,option,s/long purr.wav,--volume=%(volume)]"
		} 
	}
	elseif reference0 == "left"
	{
		if volume > 0
		{
			volume -= 5
		}
		--
		if volume < 0
		{
			volume = 0
		}
		--
		if purrmode == "ON"
		{
			"\![sound,option,s/long purr.wav,--volume=%(volume)]"
		} 
	}
	elseif reference0 == "f1"
	{
	"\![open,readme]"
	}
}